<div class="title">
  <h1>Войти</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, :label => "E-mail" %>
      <%= f.input :password, required: false, :label => "Пароль" %>
      <%= f.input :remember_me, :label=>"Запомнить меня", as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Войти", :class => "btn btn-secondary" %>
    </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
