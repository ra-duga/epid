<%= simple_form_for ([@company, @employment_contract])  do |f| %>

<div class="form-group row">
  <label for="date_start" class="col-sm-2 form-control-label">Дата начала работы</label>
  <div class="col-sm-10">
    <%= f.input :date_start, :label => false,
                             as: :date, start_year: Date.today.year - 90,
                                        end_year: Date.today.year - 12,
                                        discard_day: false,
                                        order: [:day, :month, :year] %>
  </div>
</div>

<div class="form-group row">
  <label for="specialty" class="col-sm-2 form-control-label">Сотрудник</label>
  <div class="col-sm-10">
    <%= f.association :employment, collection: Employment.order(:second_name), label_method: lambda { |employment| "#{employment.second_name}  #{employment.first_name} #{employment.third_name}" }, prompt: "Выберите сотрудника", label: false %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.button :submit,  "Сохранить", :class => "btn btn-lg btn-success"  %>
  </div>
</div>
<% end %>
